<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactList.ContactDetailPage"
             Title="ContactDetailPage">
    <Grid RowDefinitions="Auto,Auto,*" Padding="20">

        <Image Grid.Row="0"  x:Name="ContactImage" HeightRequest="300"/>
        <Label Grid.Row="1" x:Name="LblContactName"
         FontSize="Title"/>
        <Label Grid.Row="2" x:Name="LblContactDesc"
         FontSize="Subtitle"/>
        <Label Grid.Row="3" x:Name="LblContactEmail"
         FontSize="Subtitle"/>
        <Label Grid.Row="4" x:Name="LblContactPhoNum"
         FontSize="Subtitle"/>

    </Grid>
</ContentPage>